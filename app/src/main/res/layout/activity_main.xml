<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Delivery"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for dishes or restaurants"
        android:textColor="@color/black"
        android:padding="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Featured Dishes"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/f1"
                android:layout_marginEnd="16dp" />

            <ImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/f2"
                android:layout_marginEnd="16dp" />

            <ImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/f5"
                android:layout_marginEnd="16dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Popular Dishes"
        android:textSize="34sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPopularDish1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/f2"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/ivPopularDish2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/f3"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/ivPopularDish3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/f4"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>